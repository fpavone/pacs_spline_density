#############################################
#     SplineDensity package Makevars        #
#############################################

OPENMP = 		  	# if non-blank, compile with openMP enable

PKG_CPPFLAGS = -I$(R_HOME)/library/Rcpp/include -I$(R_HOME)/library/RcppEigen/include -Ofast

PKG_CXXFLAGS = -Wno-sign-compare -Wno-unused-variable -Wno-unused-but-set-variable -Wno-comment -Wno-deprecated-declarations -Wno-unused-but-set-variable -Wno-maybe-uninitialized -Wno-unknown-pragmas -Wno-unknown-warning-option

ifdef OPENMP
PKG_CPPFLAGS += -fopenmp
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS)
endif

CXX_STD = CXX11
